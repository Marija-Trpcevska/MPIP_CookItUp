<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ingredient_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/view_rounded_corners"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ingredient_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/ingredient_btn_delete"
            tools:text="Ingredient"
            android:textSize="16sp"
            android:ems="17"
            android:fontFamily="@font/comfortaa"
            android:layout_marginStart="16dp"
            />

        <ImageButton
            android:id="@+id/ingredient_btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_close_24"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/transparent"
            android:contentDescription="@string/iconPlaceholder"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>