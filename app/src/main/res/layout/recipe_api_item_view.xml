<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_api"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="25dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="28dp"
    app:cardElevation="18dp"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="8dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_api"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        >

        <ImageView android:id="@+id/recipe_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:0.5"
            app:layout_constraintWidth_percent=".923"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:contentDescription="@string/recipeImagePlaceholder"
            app:layout_constraintBottom_toTopOf="@+id/recipe_title"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/recipe_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Recipe Title"
            app:layout_constraintTop_toBottomOf="@id/recipe_image"
            app:layout_constraintBottom_toTopOf="@id/recipe_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="13dp"
            android:paddingTop="2dp"
            />

        <View
            android:id="@+id/recipe_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="13dp"
            android:paddingTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/recipe_title"
            app:layout_constraintBottom_toTopOf="@id/recipe_ingredient_lines"
            android:visibility="gone"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recipe_ingredient_lines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/recipe_divider"
            app:layout_constraintBottom_toTopOf="@id/scroll_chip"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="13dp"
            android:paddingTop="2dp"
            tools:text="@string/ingredients"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            />

        <HorizontalScrollView
            android:id="@+id/scroll_chip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            app:layout_constraintBottom_toTopOf="@id/recipe_source_layout"
            app:layout_constraintTop_toBottomOf="@id/recipe_ingredient_lines"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="13dp"
            android:visibility="gone">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/recipe_chips_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_breakfast_3"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chip_breakfast"
                    android:textSize="13sp"
                    android:visibility="gone"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_brunch_3"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chip_brunch"
                    android:textSize="13sp"
                    android:visibility="gone"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_lunch_3"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chip_lunch"
                    android:textSize="13sp"
                    android:visibility="gone"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_snack_3"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chip_snack"
                    android:textSize="13sp"
                    android:visibility="gone"
                    />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_teatime_3"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chip_teatime"
                    android:textSize="13sp"
                    android:visibility="gone"
                    />
            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/recipe_source_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="13dp"
            android:paddingTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/scroll_chip"
            app:layout_constraintBottom_toTopOf="@+id/recipe_source_url_layout"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/recipe_source_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/source"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/recipe_source"
                android:layout_marginEnd="4dp"
                />

            <TextView
                android:id="@+id/recipe_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/recipe_source_label"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/recipe_source_url_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="13dp"
            app:layout_constraintTop_toBottomOf="@id/recipe_source_layout"
            app:layout_constraintBottom_toBottomOf="@id/api_fab"
            android:visibility="gone"
            >

            <ImageView
                android:id="@+id/recipe_url_label"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="4dp"
                android:contentDescription="@string/iconPlaceholder"
                android:src="@drawable/ic_baseline_link_24"
                app:layout_constraintEnd_toStartOf="@id/recipe_source_url"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_gravity="top"
                android:layout_marginTop="3dp"
                />

            <TextView
                android:id="@+id/recipe_source_url"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/recipe_url_label"
                android:layout_weight="1"
                android:autoLink="web"
                />
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:visibility="gone"
            android:id="@+id/api_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_gravity="end|bottom"
            android:src="@drawable/ic_baseline_add_24"
            app:fabSize="mini"
            android:text="@string/fab_add"
            app:layout_constraintTop_toBottomOf="@id/recipe_source_url_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/iconPlaceholder" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
