<resources>
    <!-- Base application theme. -->
    <style name="Theme.CookItUp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4caf50</item>
        <item name="colorPrimaryVariant">#6fbf73</item>
        <item name="colorOnPrimary">#357a38</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#c6ff00</item>
        <item name="colorSecondaryVariant">#d1ff33</item>
        <item name="colorOnSecondary">#8ab200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#616161</item>
    </style>

    <style name="ChipStyle" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color_state_list</item>
        <item name="android:textColor">@color/chip_text_color_state_list</item>
    </style>

    <style name="ChipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="NavigationFont" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TabFont" parent="TextAppearance.Design.Tab">
        <item name="android:labelTextSize">40sp</item>
        <item name="fontFamily">@font/comfortaa_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <!--        <item name="android:textSize">22sp</item>-->
        <item name="android:fontFamily">@font/amatic_sc_bold</item>
        <item name="colorControlNormal">@color/color_primary</item>
    </style>

    <style name="Toast">
        <item name="stFont">@font/comfortaa</item>
    </style>
</resources>